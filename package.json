{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do https://www.tabnews.com.br para o https://curso.dev",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": " npm run services:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amorimcesar/clone-tabnews.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amorimcesar/clone-tabnews/issues"
  },
  "homepage": "https://github.com/amorimcesar/clone-tabnews#readme",
  "dependencies": {
    "dotenv": "^17.2.1",
    "next": "^15.3.2",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "jest": "^30.0.2",
    "prettier": "^3.5.3"
  }
}
